<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" 
        android:background="@layout/shape_classic">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:padding="10dip"
            android:gravity="center"> 
    
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewCpuUse"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:src="@drawable/cpuuse" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageViewRamUse"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/rampercent" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageViewBattery"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/a60" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageViewSDCardInternalUse"
                android:layout_width="0dip"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/sdcardinternalavalaible"
                android:background="@drawable/click"/>

        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/CPUUse"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:gravity="center_horizontal"
                android:textColor="#FFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="loading..." />

            <TextView
                android:id="@+id/RAMUse"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="loading..." />

            <TextView
                android:id="@+id/BatteryUse"
                
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="loading..." />

            <TextView
                android:id="@+id/SDCardInternalUse"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:textSize="13sp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="loading..." />
        
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>