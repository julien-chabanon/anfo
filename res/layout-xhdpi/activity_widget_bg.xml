<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center"
        android:background="@layout/shape_classic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:padding="10dip"
            android:gravity="center">
     
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewCpuUse"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:src="@drawable/cpuuse" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageViewCurrent"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/cpucurrent" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageViewCore"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/cpucore" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/cputemp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal"
            android:paddingBottom="25dip">

            <TextView
                android:id="@+id/CPUUse"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:text="loading..." />

            <TextView
                android:id="@+id/CPUcurrent"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:text="loading..." />

            <TextView
                android:id="@+id/CPUCore"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:text="loading..." />

            <TextView
                android:id="@+id/CPUTemp"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:text="loading..." />

        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/LayoutRam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewRamPercent"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:src="@drawable/rampercent" 
                android:background="@drawable/click"/>

            <ImageView
                android:id="@+id/imageViewRamAvailableMo"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/sdcard_internal_use" 
                android:background="@drawable/click"/>
            
            <ImageView
                android:id="@+id/imageViewRamUsingMo"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/sdcard_external_use" 
                android:background="@drawable/click"/>
            
            <ImageView
                android:id="@+id/imageViewRamTotal"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:src="@drawable/internet_on_wifi" 
                android:background="@drawable/click"/>



        </LinearLayout>
        
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/RamUse"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:gravity="center_horizontal"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingBottom="20dip"
                android:text="loading..." />

            <TextView
                android:id="@+id/Ramcurrent"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="loading..." />
            
            <TextView
                android:id="@+id/TextViewRamUsingMo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="loading..." />

            <TextView
                android:id="@+id/RamMax"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:textColor="#FFF"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="loading..." />


        </LinearLayout>
        
         
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingBottom="10dip"
            android:gravity="center_horizontal">
            
             
             <ImageView
                android:id="@+id/batteryView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a60" 
                android:background="@drawable/click"/>
        
			<TextView android:id="@+id/Battery"
	   		 android:text="Loading..."
	   		 android:layout_height="wrap_content"
	   		 android:layout_width="wrap_content"
	   		 android:layout_gravity="center"
	   		 android:layout_marginTop="5dip"
	   		 android:padding="10dip"
	   		 android:textStyle="bold"
             android:textSize="14sp"
	   		 android:textColor="#FFF"/>

        </LinearLayout>
        
         
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center_horizontal"
            android:paddingBottom="10dip">
			
        	<ImageView
                android:id="@+id/wifi"
			    android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:paddingRight="3dip"
                android:paddingLeft="3dip"
                android:src="@drawable/wifiwaiting" 
                android:background="@drawable/click"/>
        	
        	<ImageView
                android:id="@+id/bluetooth"
			    android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:paddingRight="3dip"
                android:src="@drawable/bluetooth" 
                android:background="@drawable/click"/>
        
			<ImageView
                android:id="@+id/data"
			    android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:paddingRight="3dip"
                android:src="@drawable/dataoff" 
                android:background="@drawable/click"/>
			
			<ImageView
                android:id="@+id/gps"
			    android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:paddingRight="3dip"
                android:src="@drawable/gps" 
                android:background="@drawable/click"/>
			

			<ImageView
			    android:id="@+id/brightness"
			    android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:paddingRight="3dip"
			    android:src="@drawable/brightness_icon" 
			    android:background="@drawable/click"/>

        </LinearLayout>
</LinearLayout>
    </LinearLayout>
