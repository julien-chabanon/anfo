<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:gravity="center">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/imageViewSysyemPanel"
            android:layout_below="@+id/imageViewSysyemPanel"
            android:gravity="center"
            android:text=" Tasks"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="#686A69" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/click"
            android:src="@drawable/notif_icon" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView2"
            android:background="@drawable/click"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignRight="@+id/imageView3"
            android:gravity="center"
            android:text="CPU info"
            android:textSize="11dp" 
            android:textStyle="bold"
            android:textColor="#686A69"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="CPU Cores "
            android:textSize="11dp" 
            android:textStyle="bold"
            android:textColor="#686A69"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/imageView5"
            android:layout_below="@+id/imageView5"
            android:gravity="center"
            android:text="RAM info"
            android:textSize="11dp" 
            android:textStyle="bold"
            android:textColor="#686A69"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView7"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:gravity="center"
            android:text="Notifications"
            android:textSize="11dp" 
            android:textStyle="bold"
            android:textColor="#686A69"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/imageView7"
            android:layout_below="@+id/imageView7"
            android:gravity="center"
            android:text="Storage"
            android:textSize="11dp" 
            android:textStyle="bold"
            android:textColor="#686A69"/>



        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView10"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView7"
            android:gravity="center"
            android:text="CPU Stats"
            android:textSize="11dp" 
            android:textStyle="bold"
            android:textColor="#686A69"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView7"
            android:background="@drawable/click"
            android:src="@drawable/stats_icon" />
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:textSize="11dp"
            android:text="Set frequency"
            android:textStyle="bold"
            android:textColor="#686A69"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignTop="@+id/imageView10"
            android:background="@drawable/click"
            android:src="@drawable/occ_icon" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignTop="@+id/imageViewSysyemPanel"
            android:background="@drawable/click"
            android:src="@drawable/cpuuse" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView3"
            android:background="@drawable/click"
            android:src="@drawable/core" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Others"
            android:textStyle="bold"
            android:textColor="#686A69"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="60dp"
            android:background="@drawable/click"
            android:src="@drawable/sdcard" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="60dp"
            android:background="@drawable/click"
            android:src="@drawable/rampercent" />

        <ImageView
            android:id="@+id/imageViewSysyemPanel"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/click"
            android:src="@drawable/task_icon" />

    </RelativeLayout>



</LinearLayout>